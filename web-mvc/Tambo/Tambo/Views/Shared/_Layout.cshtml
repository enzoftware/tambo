<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>@ViewBag.Title - Tambo</title>

</head>
<body>

    <style>
        li {
            size: 20px;
            margin: 20px;
            font-weight: bold;
            text-decoration: none;

        }


    </style>

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #F4D32C;">
        <a class="navbar-brand" id="title_tambo">
            <img src="https://s3.amazonaws.com/www.laborum.pe/lb_companies/r/logos/92869/1711_5a0f5d33b686a.png" width="30" height="30" class="d-inline-block align-top" alt="">
            @Html.ActionLink("Tambo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Productos", "Index", "Productos")</li>
                    <li class="nav-item">@Html.ActionLink("Tiendas", "Index", "Tiendas")</li>
                    <li class="nav-item">@Html.ActionLink("Marcas", "Index", "Marcas")</li>
                    <li class="nav-item">@Html.ActionLink("Categorias", "Index", "Categorias")</li>
                    <li class="nav-item">@Html.ActionLink("Inventario", "Index", "Inventarios")</li>
                </ul>
            </ul>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tambo</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>